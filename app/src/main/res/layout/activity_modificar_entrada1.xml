<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codigohernancho.app.prueba.com.inventariodecompras.gui_entradas.registrarEntrada"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:baselineAligned="false"
    android:weightSum="1">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="379dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtnombreProductoEncontrado"
        android:layout_toStartOf="@+id/imageView"
        android:contentDescription="Marca"
        android:ems="10"
        android:hint="Marca"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="203dp" />

    <EditText
        android:id="@+id/txtcodigoABuscar"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_weight="0.02"
        android:ems="10"
        android:hint="Ingrese el Codigo a buscar"
        android:inputType="textPersonName"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="426dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="94dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtnombreProductoABuscar"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese el nombre del producto a Buscar"
        android:inputType="textPersonName"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="468dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="153dp"
        android:layout_below="@+id/txtcodigoABuscar"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txtCantidadAAdicionar"
        android:layout_width="173dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="textPersonName"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="383dp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="46dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/btnLimpiar"
        android:layout_toEndOf="@+id/txtnombreProductoEncontrado" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="155dp"
        android:layout_height="137dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_conversion_absoluteHeight="341dp"
        tools:layout_conversion_absoluteWidth="156dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_below="@+id/btnGuardarEntrada"
        android:layout_alignEnd="@+id/txtdescripcionProductoEncontrado"
        android:layout_above="@+id/txtdescripcionProductoEncontrado" />

    <EditText
        android:id="@+id/txtstockActualProductoEncontrado"
        android:layout_width="173dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Stock maximo"
        android:inputType="textPersonName"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="341dp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_above="@+id/txtstockMinProductoEncontrado"
        android:layout_alignStart="@+id/txtdescripcionProductoEncontrado"
        android:layout_alignEnd="@+id/txtstockMinProductoEncontrado" />

    <EditText
        android:id="@+id/txtnombreProductoEncontrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="468dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="153dp"
        android:layout_below="@+id/btnGuardarEntrada"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView" />

    <EditText
        android:id="@+id/txtmarcaProductoEncontrado"
        android:layout_width="379dp"
        android:layout_height="39dp"
        android:layout_above="@+id/txtunidadProductoEncontrado"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView"
        android:contentDescription="Marca"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="203dp" />

    <EditText
        android:id="@+id/txtunidadProductoEncontrado"
        android:layout_width="379dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Unidad"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="249dp"
        android:layout_above="@+id/txtdescripcionProductoEncontrado"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView" />

    <EditText
        android:id="@+id/txtdescripcionProductoEncontrado"
        android:layout_width="366dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="298dp"
        android:layout_above="@+id/txtstockActualProductoEncontrado"
        android:layout_alignEnd="@+id/txtstockMinProductoEncontrado" />

    <EditText
        android:id="@+id/txtstockMinProductoEncontrado"
        android:layout_width="363dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Stock Minimo"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="390dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:onClick="modificar_clicked"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/txtnombreProductoABuscar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp" />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buscarEntrada_clicked"
        android:text="Borrar"
        android:layout_alignBaseline="@+id/btnBuscar"
        android:layout_alignBottom="@+id/btnBuscar"
        android:layout_toEndOf="@+id/btnBuscar"
        android:layout_marginStart="49dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtCantidadAAdicionar"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtCantidadAAdicionar"
        android:layout_toStartOf="@+id/txtCantidadAAdicionar"
        android:text="Adiciona la cantidad  >>"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnGuardarEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCantidadAAdicionar"
        android:layout_toEndOf="@+id/btnBuscar"
        android:text="Guardar" />


</RelativeLayout>
